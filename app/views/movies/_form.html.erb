<%= form_for @movie do |f| %>
  <p>
    <%= f.label :title %><br>
    <%= f.text_field :title %>
  </p>
  <p>
    <%= f.label :director %><br>
    <%= f.text_field :director %>
  </p>
  <p>
    <%= f.label :rating %><br>
    <%= f.text_field :rating %>
  </p>
  <p>
    <%= f.label :poster %><br>
    <%= f.text_field :poster %>
  </p>
  <p>
    <%= f.label :synopsis %><br>
    <%= f.text_area :synopsis %>
  </p>
  <p>
    <%= f.submit "Save this Movie!", class: 'flatButton' %>
  </p>
<% end %>